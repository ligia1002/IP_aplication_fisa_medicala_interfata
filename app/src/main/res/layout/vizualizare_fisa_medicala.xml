<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:visibility="visible">

    <TextView
        android:id="@+id/fisa_titlu"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Fișă medicală"
        android:textSize="24sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View

        android:id="@+id/view"
        android:layout_width="400dp"
        android:layout_height="594dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#DBF2F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Layout pentru Date Personale -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Personale"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nume"
                            android:textSize="18sp"
                            android:padding="8dp"
                            android:background="#E0F7FA" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="nume_pacient"
                            android:textSize="18sp"
                            android:padding="8dp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Prenume"
                            android:textSize="18sp"
                            android:padding="8dp"
                            android:background="#E0F7FA" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="30"
                            android:textSize="18sp"
                            android:padding="8dp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CNP"
                            android:textSize="18sp"
                            android:padding="8dp"
                            android:background="#E0F7FA" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="30"
                            android:textSize="18sp"
                            android:padding="8dp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Vârstă"
                            android:textSize="18sp"
                            android:padding="8dp"
                            android:background="#E0F7FA" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="30"
                            android:textSize="18sp"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="E-mail"
                            android:textSize="18sp"
                            android:padding="8dp"
                            android:background="#E0F7FA" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="30"
                            android:textSize="18sp"
                            android:padding="8dp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Telefon"
                            android:textSize="18sp"
                            android:padding="8dp"
                            android:background="#E0F7FA" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="30"
                            android:textSize="18sp"
                            android:padding="8dp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Adresa"
                            android:textSize="18sp"
                            android:padding="8dp"
                            android:background="#E0F7FA" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="30"
                            android:textSize="18sp"
                            android:padding="8dp" />

                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Profesie"
                            android:textSize="18sp"
                            android:padding="8dp"
                            android:background="#E0F7FA" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="30"
                            android:textSize="18sp"
                            android:padding="8dp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loc de muncă"
                            android:textSize="18sp"
                            android:padding="8dp"
                            android:background="#E0F7FA" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="30"
                            android:textSize="18sp"
                            android:padding="8dp" />
                    </TableRow>

                    <!-- Adăugați mai multe rânduri după cum este necesar -->

                </TableLayout>
            </LinearLayout>

            <!-- Layout pentru Consultații -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consultații"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <!-- Rând de antet -->
                    <TableRow
                        android:background="#E0F7FA"
                        android:padding="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Data"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Diagnostic"
                            android:textSize="12sp"
                            android:padding="8dp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tratament"
                            android:textSize="13sp"
                            android:padding="8dp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:text="Recomandare"
                            android:textSize="11sp"
                            android:padding="7dp"
                            android:textStyle="bold" />
                    </TableRow>

                    <!-- Rânduri pentru date consultații -->
                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10/05/2023"
                            android:textSize="18sp"
                            android:padding="8dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gripe"
                            android:textSize="18sp"
                            android:padding="8dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Medicamente"
                            android:textSize="18sp"
                            android:padding="8dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Odihnă"
                            android:textSize="18sp"
                            android:padding="8dp" />
                    </TableRow>

                    <!-- Adăugați mai multe rânduri după cum este necesar -->

                </TableLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>